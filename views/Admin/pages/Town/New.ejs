<div class="col-md-6 mx-auto">
  <div class="card">
    <div class="card-header card-header-warning">
      <h4 class="card-title">New Town</h4>
    </div>
    <div class="card-body">
      <p class="text-danger">* fields are required</p>
      <form id="create_town" action="/admin/town" method="POST">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group bmd-form-group">
              <label class="bmd-label-floating"><span class="text-danger">*</span> Town Name</label>
              <input type="text" class="form-control" id="town_name" name="town_name">
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group bmd-form-group">
              <label class="bmd-label-floating"><span class="text-danger">*</span> Zip Code</label>
              <input type="number" class="form-control" id="zipcode" name="zipcode">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class="form-check form-check-radio">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" name="city" id="city" value="1" checked>
                City
                <span class="circle">
                  <span class="check"></span>
                </span>
              </label>
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-check form-check-radio">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" name="city" id="city1" value="0">
                Town
                <span class="circle">
                  <span class="check"></span>
                </span>
              </label>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-info pull-right">Save Record</button>
        <div class="clearfix"></div>
      </form>
    </div>
  </div>
</div>
<script>
  $(document).ready(function () {

    disableKeysForNumbers(zipcode)
    function disableKeysForNumbers(input) {
      $(input).keydown(function (evt) {
        var keycode = evt.charCode || evt.keyCode;
        if (keycode == 69 || keycode == 110 || keycode == 190 || keycode == 189 || keycode == 109 || keycode == 107 || keycode == 187) { //Enter key's keycode
          return false;
        }
      });
    }
    $('#create_town').submit((e) => {
      // Validation
      var town_name = $.trim($('#town_name').val());
      var zipcode = $.trim($('#zipcode').val());

      if (town_name === '') {
        e.preventDefault()
        alert('Town name is required.');
      }

      if (zipcode == '' || !$.isNumeric(zipcode) || zipcode <= 0) {
        alert('Enter a valid zipcode');
        return false;
      }
    });
  });
</script>