<div class="col-md-10 mx-auto">
  <div class="card">
    <div class="card-header card-header-warning">
      <h4 class="card-title">View Spot <%= rows[0].spot_name %></h4>
    </div>
    <div class="card-body">
      <form action="/admin/spot" method="POST">
        <div class="row">
          <div class="col-md-12" id="map" style="height:350px;width:100%;"></div>
          <div class="col-md-6">
              <label for="barangay_name">Town</label>
              <input type="text" class="form-control" value="<%= rows[0].town_name %>" readonly>
          </div>
          <div class="col-md-6">
              <label for="barangay_name">Barangay</label>
              <input type="text" class="form-control"value="<%= rows[0].bar_name %>" readonly>
          </div>
          <div class="col-md-6">
            <label for="exampleFormControlTextarea1">Description</label>
              <textarea class="form-control" name="desc" rows="3" readonly><%= rows[0].spot_description %></textarea>
          </div>
          <div class="col-md-6">
            <label for="exampleFormControlTextarea1">Route</label>
              <textarea class="form-control" name="desc" rows="3" readonly><%= rows[0].sl_route %></textarea>
          </div>
          <div class="col-md-6">
              <label for="barangay_name">Latitude</label>
              <input type="text" class="form-control" name="sl_latitude" id="sl_latitude" value="<%= rows[0].sl_latitude %>" readonly>
          </div>
          <div class="col-md-6">
              <label for="barangay_name">Longitude</label>
              <input type="text" class="form-control" name="sl_longitude" id="sl_longitude" value="<%= rows[0].sl_lontitude %>" readonly>
          </div>
          <div class="col-md-12">
            <% rows.forEach(function(row){ %>
              <img src="/uploads/<%= row.img_filename %>" alt="/uploads/<%= row.image_filename %>" height="200" width="200" class="img-thumbnail" >
            <%	}); %>  
            
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script async defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBc7MrXyAOjZ9VAmPCniGxbH5MEn0jpP7Q&callback=initMap">
</script>
<script>
  function initMap() {
    let dagupan = { 
      lat: parseFloat(document.getElementById('sl_latitude').value), 
      lng: parseFloat(document.getElementById('sl_longitude').value) 
    };
    map = new google.maps.Map(document.getElementById('map'), {
      zoom: 18,
      center: dagupan
    });

    var marker = new google.maps.Marker({
      position: dagupan,
      map: map
    });
  }   
</script>